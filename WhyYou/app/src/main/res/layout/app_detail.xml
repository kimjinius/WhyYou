<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_baseline_close_24"/>

        <TextView
            android:layout_width="270dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/btndok"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_baseline_check_24"/>

    </LinearLayout>

    <TextView
        android:id="@+id/appdtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="25sp"
        android:text="제주도 가자"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:fontFamily="@font/fontstyle"
        />

    <TextView
        android:id="@+id/appdtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:text="2018.11.30 pm.10"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:fontFamily="@font/fontstyle"
        />
    <TextView
        android:id="@+id/appddeptime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:text="3시에 출발해!"
        android:layout_gravity="center"
        android:textColor="#FF0000"
        android:fontFamily="@font/fontstyle"
        />

    <TextView
        android:id="@+id/appdlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="모임 장소"
        android:textColor="@color/black"
        android:fontFamily="@font/fontstyle"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/appdwith"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:text="함께하는 사람 : 윤채림"
            android:textColor="#000000"
            android:fontFamily="@font/fontstyle"
            />

        <Button
            android:id="@+id/wheredfriend"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/ic_baseline_directions_run_24"
            android:clickable="false" />
    </LinearLayout>

</LinearLayout>